<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.auribises.Person" table="PERSON">
      <id name="pid" column="PID">
         <generator class="increment"/>
      </id>
      <property name="name" column="NAME"/>
      <property name="email" column="EMAIL"/>
      <property name="phone" column="PHONE"/>
      <property name="age" column="AGE"/>
      <one-to-one name="address" class="com.auribises.Address" cascade="all"/>
   </class>
   
   <class name="com.auribises.Address" table="ADDRESS">
      <id name="aid" column="AID">
         <generator class="foreign">
         	<param name="property">person</param>
         </generator>
      </id>
      <property name="adrsLine" column="ADRSLINE"/>
      <property name="city" column="CITY"/>
      <property name="state" column="STATE"/>
      <property name="zipCode" column="ZIPCODE"/>
      <one-to-one name="person" class="com.auribises.Person" cascade="all" constrained="true"/>
   </class>
   
</hibernate-mapping>